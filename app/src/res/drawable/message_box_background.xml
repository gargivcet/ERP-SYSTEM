<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border -->
    <stroke
        android:width="2dp"
    android:color="#CCCCCC" /> <!-- Border color -->

    <!-- Background Color -->
    <solid android:color="@color/white" /> <!-- Background color -->

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Corners -->
    <corners android:radius="20dp" /> <!-- Corner radius -->

</shape>
